<StudentScreen>:
    name: 'student'
    GridLayout:
        rows: 2
        Label:
            text: 'Choose a Topic you wish to learn'
            font_size: '20sp'
            size_hint: 1, None
        StudentTopicsRV:
            viewclass: 'Button'  # defines the viewtype for the data items.
            orientation: "vertical"
            spacing: 40
            #padding:10, 10
            
            #space_x: self.size[0]/3
            #bar_width:dp(10)
            RecycleBoxLayout:
                #color:(1, 0, 0, 0)
                default_size: dp(40),dp(60)
                default_size_hint: 1,None
                pos_hint: { 'x' : 0.5}
                size_hint_y:None
                height: self.minimum_height
                orientation: 'vertical'
                #size_hint_x: None

<TeacherScreen>:
    name: 'teacher'
    # teacher_selection: teacher_selection
    # status: status
    GridLayout:
        rows: 2
        Label:
            text: 'Choose a Topic you wish to check/correct'
            size_hint: 1, None
        BoxLayout:
            #rows:1
            orientation:"vertical" 
            #row_force_default:True
            size_hint : 1,0.5
            #row_default_height:20
            padding : 525,0
            TeacherTopicsRV:
                viewclass: 'Button'  # defines the viewtype for the data items.
                orientation: "vertical"
                RecycleBoxLayout:
                    default_size: None, dp(60)
                    # defines the size of the widget in reference to width and height
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical' # defines the orientation of data items